@model IEnumerable<WareHouse.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemQTY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemThres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemSalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPurchasePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemQTY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemThres)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.ItemSalePrice)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.ItemPurchasePrice)
        </td>
        <td>
            <img src="@Html.Raw(item.ItemPhoto)" width="140" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ItemID })
        </td>
    </tr>
}

</table>

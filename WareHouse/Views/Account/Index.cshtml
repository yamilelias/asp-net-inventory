@model IEnumerable<WareHouse.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
}

<div class="content-header">
    <div class="row">
        <div class="col-sm-6">
            <div class="header-section">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
        <div class="col-sm-6 hidden-xs">
            <div class="header-section">
                <ul class="breadcrumb breadcrumb-top">
                    <li>@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Datatables Block -->
<div class="block full">
    <div class="block-title">
        <h2>Datatables</h2>
    </div>
    <div class="table-responsive">
        <table id="example-datatable" class="table table-striped table-bordered table-vcenter">
            <thead>
                <tr>
                    <th class="text-center" style="width: 50px;">ID</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th style="width: 120px;">@Html.DisplayNameFor(model => model.Roles)</th>
                    <th class="text-center" style="width: 75px;"><i class="fa fa-flash"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td><strong>@Html.DisplayFor(modelItem => item.UserName)</strong></td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td><span class="label label-info">@Html.DisplayFor(modelItem => item.Roles)</span></td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-effect-ripple btn-xs btn-success" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-effect-ripple btn-xs btn-default" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-effect-ripple btn-xs btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- END Datatables Block -->